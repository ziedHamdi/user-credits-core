{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ESNext",
    "lib": ["ESNext"],
    "declaration": true,
    "outDir": "dist",
    "module": "ESNext"
  },
  "tsc-alias": {
    "resolveFullPaths": true,
    "verbose": false
  },
  "baseUrl": ".",
  "exclude": ["coverage", "dist", "node_modules", "test"],
  "extends": "@tsconfig/recommended/tsconfig.json",
  "include": ["src/**/*"]
}
